<ResourceDictionary
    x:Class="GZSkinsX.Extensions.CreatorStudio.AssetsExplorer.TreeViewNodeItemTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrls2="using:GZSkinsX.Api.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:GZSkinsX.Extensions.CreatorStudio.AssetsExplorer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <DataTemplate x:Key="AssetsExplorerItem_ItemTemplate" x:DataType="muxc:TreeViewNode">
        <StackPanel Orientation="Horizontal">
            <Viewbox
                Width="16"
                Height="16"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <ctrls2:SegoeFluentIcon Glyph="{x:Bind ((local:AssetsExplorerItem)Content).Glyph, Mode=OneTime}" />
            </Viewbox>
            <TextBlock Margin="10,0,0,0" Text="{x:Bind ((local:AssetsExplorerItem)Content).Name, Mode=OneTime}" />
        </StackPanel>
    </DataTemplate>

</ResourceDictionary>
